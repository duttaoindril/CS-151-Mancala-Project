import java.awt.*;
import java.awt.event.*;

import javax.swing.*;

public class StartPanelGUI extends JFrame implements ActionListener
{
	private JPanel startPanel;
	private JButton threeStones;
	private JButton fourStones;
	private JButton red;
	private JButton orange;
	private JButton yellow;
	private JButton green;
	private JButton blue;
	private JButton purple;
	public StartPanelGUI()
	{
		int width = 550;
		int height = 250;
		setSize(width, height);
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		getContentPane().setBackground(Color.GRAY);
		getContentPane().setLayout(new GridLayout(3, 3));
		tStonePanel();
		fStonePanel();
		redPanel();
		orangePanel();
		yellowPanel();
		greenPanel();
		bluePanel();
		purplePanel();
		setVisible(true);
	}
	
	private JPanel tStonePanel()
	{
		threeStones = new JButton("3 Stones");
		JPanel tStones = new JPanel();
		getContentPane().add(threeStones);
		threeStones.addActionListener(this);
		return tStones;
	}
	
	private JPanel fStonePanel()
	{
		fourStones = new JButton("4 Stones");
		JPanel fStones = new JPanel();
		getContentPane().add(fourStones);
		fourStones.addActionListener(this);
		return fStones;
	}
	
	private JPanel redPanel()
	{
		red = new JButton("Red");
		JPanel rBtn = new JPanel();
		getContentPane().add(red);
		red.addActionListener(this);
		return rBtn;
	}
	
	private JPanel orangePanel()
	{
		orange = new JButton("Orange");
		JPanel oBtn = new JPanel();
		getContentPane().add(orange);
		orange.addActionListener(this);
		return oBtn;
	}
	
	private JPanel yellowPanel()
	{
		yellow = new JButton("Yellow");
		JPanel yBtn = new JPanel();
		getContentPane().add(yellow);
		yellow.addActionListener(this);
		return yBtn;
	}
	
	private JPanel greenPanel()
	{
		green = new JButton("Green");
		JPanel gBtn = new JPanel();
		getContentPane().add(green);
		green.addActionListener(this);
		return gBtn;
	}
	
	private JPanel bluePanel()
	{
		blue = new JButton("Blue");
		JPanel bBtn = new JPanel();
		getContentPane().add(blue);
		blue.addActionListener(this);
		return bBtn;
	}
	
	private JPanel purplePanel()
	{
		purple = new JButton("Purple");
		JPanel pBtn = new JPanel();
		getContentPane().add(purple);
		purple.addActionListener(this);
		return pBtn;
	}
	
	@Override
	public void actionPerformed(ActionEvent e) 
	{
		
	}
}
